@page "/counter"
@inject EsoDailyDungeons.EntityFramework.IEsoDbContextFactory _EsoDbContextFactory

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

Test: @GetCharacter()

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private string GetCharacter()
    {
        using var context = _EsoDbContextFactory.Create();

        return context.Characters.FirstOrDefault()?.Name ?? "<unknown>";
    }
}
